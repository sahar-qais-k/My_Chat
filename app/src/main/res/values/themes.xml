<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyChat" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

    </style>


    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title." parent="android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="sentMassageContainer">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="receiveMassageContainer">
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="massageTextView">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">sans-serif-medium</item>

    </style>
    <style name="massageTextView.sentMassage">
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="massageTextView.receiveMassage">
        <item name="android:padding">25dp</item>
        <item name="android:textColor">#575e68</item>
    </style>
    <style name="timeText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#b0b0b0</item>
    </style>
    <style name="timeText.send">
        <item name="android:textAlignment">textEnd</item>
    </style>
    <style name="timeText.receive">
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="iconContainer">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="iconProperties">
        <item name="android:padding">5dp</item>
        <item name="android:tint">#b0b0b0</item>
    </style>
</resources>
